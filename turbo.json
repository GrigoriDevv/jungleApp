{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "dev": { "cache": false },
      "migrate": { "dependsOn": ["^migrate"] },
      "test": { "dependsOn": ["build"] }
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}